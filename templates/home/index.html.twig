{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<div class="container">

		<div class="jumbotron mt-3">
			<h1 class="display-3">Bienvenue sur SimBNB!</h1>
			<p class="lead">
				Site de mise en relation ....This is a simple hero unit, a simple jumbotron-style component for calling extra attention to featured content or information.</p>
			<hr class="my-4">
			<p>Vous ets voyageur ? It uses utility classes for typography and spacing to space content out within the larger container.</p>
			<p class="lead">
				<a class="btn btn-primary btn-lg" href="#" role="button">Voir nos annonce</a>
			</p>
		</div>

		<h2 class="my-5 h1">Nos appartement stars</h2>
		<div class="row">
            {% for data in ads %}
                {% include "partials/cardAnnonce.html.twig"  with {'ad': data.annonce} %}
            {% endfor %}
		</div>

		<h2 class="my-5 h1">Nos Proprio stars</h2>
		<div class="row">
        {% for data in users %}
			<div class="col-6">
				<div class="card border-secondary mb-3">

					<div class="card-body">
						<h4 class="card-title">{{data.user.fullName}}</h4>
						<div class="card-text">
							<img src="{{data.user.picture}}" alt="{{data.user.fullName}}" class="float-left mr-3">
                                <p>{{data.user.introduction}}</p>
							<a href="{{path('user_show',{'slug': data.user.slug})}}" class="btn btn-success float-right">En savoir plus</a>
						</div>
					</div>
				</div>
			</div>
            
        {% endfor %}



		{% endblock %}
