{% extends 'base.html.twig' %}

{% block title %}Vos Resevation passé et a venir{% endblock %}

{% block body %}
<div class="container">

    <h1 class="my-5">Mes reservations</h1>
    <div class="alert alert-success">
        <p>Retrouver ci-dessous toutes vos résarvations passées et à venir</p>
    </div>
    {% for booking in app.user.bookings %}
        <div class="row mt-3">
            <div class="col-md-4 ">
                <img src="{{booking.ad.coverImage}}" alt="photo de l'annonce {{booking.ad.title}}" class="img-fluid">


                <div class="mt-3">
                {% set comment = booking.ad.getCommentFromUser(app.user) %}
                {% if comment is not null %}
                    <strong>Note donnée : </strong>
                    {% include "partials/rating.html.twig" with {'rating': comment.rating} %}
                {% else %}
                    <p>Vous n'avez pas encore donné de note ! </p>
                    <a href="{{path('booking_show',{'id': booking.id})}}#comment" class="btn btn-link">Je donne mon avis .</a>
                {% endif %}
                </div>

            </div>
            <div class="col-md-8">
                <h4>{{booking.ad.title}}</h4>
                <p>
                    Réservation <strong> n° {{booking.id}}</strong> <br>
                    Du {{booking.startDate | date('d/m/Y')}} au {{booking.endDate | date('d/m/Y')}} {{booking.amount}} &euro;
                </p>
                <a href="{{path('booking_show', {'id': booking.id})}}" class="btn btn-secondary">plus d'imformation</a>
            </div>
        </div>
        <hr>
    {% endfor %}



</div>

{% endblock %}