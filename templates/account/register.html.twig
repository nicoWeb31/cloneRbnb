{% extends 'base.html.twig' %}

{% block title %}Inscription au site!{% endblock %}

{% block body %}
<div class="container">

        {{form_start(form)}}
    <div class="row">



        <div class="col">
            <h1 class="my-5">Inscrivez vous sur notre site !</h1>
            <div class="alert alert-light">
                <h2 class="alert-heading">Imformations générales</h2>
                <hr>
                {{form_row(form.firstName)}}
                {{form_row(form.lastName)}}
                {{form_row(form.email)}}
                {{form_row(form.picture)}}

            </div>

        </div>
        <div class="col">
        <div class="alert alert-light">
        <h2>Mot de passe</h2>
        <hr>
                {{form_row(form.hash)}}
                {{form_row(form.passwordConfirm)}}

        
        </div>
            <div class="alert alert-light">
                <h2 class="alert-heading">Détails</h2>
                <hr>
                {{form_row(form.introduction)}}
                {{form_row(form.description)}}

                <hr>
                <p>Comfirmer l'inscription</p>
                <button type="submit" class="btn btn-success">
                    <i class="fa fa-check"></i>
                    Confirmer</button>

            </div>

        </div>
        {{form_end(form)}}


    </div>
</div>






{% endblock %}