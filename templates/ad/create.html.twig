{% extends 'base.html.twig' %}

{% block title %}Creation d'une annonce{% endblock %}


{% form_theme form 'ad/_collection.html.twig' %}

{% block body %}

<div class="container">
    <h1 class="my-5">Ajouter une Annonce</h1>
    
    
    
    
    {{ form_start(form)}}
    {# {{ dump() }} #}

<div class="row">
    <div class="col">
        <div class="alert alert-light">
            <h2>Iniformations générales</h2>
            <hr>
            {{form_row(form.title)}}
            {{form_row(form.slug)}}
            {{form_row(form.price)}}
            {{form_row(form.rooms)}}
        

        </div>
        <div class="alert alert-light">
        <h2>Détails de l'annonce</h2>
        <hr>
            {{form_row(form.introduction)}}
            {{form_row(form.content)}}

        </div>

    </div>
    <div class="col">
        <div class="alert alert-light">
            <h2>Image de l'annonce</h2>
            <hr>
            {{form_row(form.coverImage)}}
            {{form_row(form.images)}}

        </div>
    </div>
</div>
<div class="alert alert-success clear fix">
<h2 class="alert-heading">Sauver mon annonce </h2>
<p>Vous etes sur le point de creer votre annonce !</p>
</div>
    
    
    <input type="hidden" id="widget-counter" value="0">
    <button type="submit" class="btn btn-primary float-rigth">
    <i class="fa fa-check"></i>
    Creer une nouvelle annonce</button>
    
    {{ form_end(form)}}
    
    
    
</div>

{% endblock %}



{% block javascripts %}

<script src="/js/ad.js"></script>

{% endblock %}