{% extends 'base.html.twig' %}

{% block title %}Creation d'une annonce{% endblock %}


{% form_theme form 'ad/_collection.html.twig' %}

{% block body %}

<div class="container">
    <h1>Ajouter une Annonce</h1>
    
    
    
    
    {{ form_start(form)}}
    {# {{ dump() }} #}
    
    {{ form_widget(form)}}
    <input type="hidden" id="widget-counter" value="0">
    
    <button type="submit" class="btn btn-primary">Creer une nouvelle annonce</button>
    
    {{ form_end(form)}}
    
    
    
</div>

{% endblock %}



{% block javascripts %}

<script src="/js/ad.js"></script>

{% endblock %}