{% extends 'admin/base.html.twig' %}

{% block title %}Tableau de bord !
{% endblock %}


{% block body %}
	<div class="container-fluid">
		<div class="row">
			<div class="col">
				<div class="card bg-primary text-white mb-3 text-center">
					<div class="card-body">
						<div class="row">
							<div class="col-4">
								<i class="fa fa-user fa-3x" aria-hidden="true"></i>

							</div>
							<div class="col-8">
								<h4 class="card-title">{{stats.users}}
									utilisateurs</h4>

							</div>

						</div>
					</div>
				</div>
			</div>

			<div class="col">
				<div class="card bg-dark text-white mb-3 text-center">
					<div class="card-body">
						<div class="row">
							<div class="col-4">
								<i class="fa fa-bed fa-3x" aria-hidden="true"></i>


							</div>
							<div class="col-8">
								<h4 class="card-title">{{stats.ads}}
									annonces posté</h4>

							</div>

						</div>
					</div>
				</div>
			</div>

			<div class="col">
				<div class="card bg-warning text-white mb-3 text-center">
					<div class="card-body">
						<div class="row">
							<div class="col-4">
								<i class="fa fa-folder-open fa-3x" aria-hidden="true"></i>


							</div>
							<div class="col-8">
								<h4 class="card-title">{{stats.bookings}}
									Réservations</h4>

							</div>

						</div>
					</div>
				</div>


			</div>

			<div class="col">
				<div class="card bg-success text-white mb-3 text-center">
					<div class="card-body">
						<div class="row">
							<div class="col-4">
								<i class="fa fa-comment fa-3x" aria-hidden="true"></i>


							</div>
							<div class="col-8">
								<h4 class="card-title">{{stats.comments}}
									commentaires</h4>

							</div>

						</div>
					</div>
				</div>

			</div>
		</div>
		<hr>
		<div class="row">
			<div class="col">

				<div class="card bg-success text-white mb-3 p-3">
					<h2 class="alert-heading my-3">
						<i class="fa fa-arrow-up" aria-hidden="true"></i>

						Les annonces populaires</h2>
					<table class="table-hover">
						<thead>
							<tr>
								<th>Annonce</th>
								<th>Propriétaire</th>
								<th>Moyenne</th>
							</tr>
						</thead>
						<tbody>
							{% for ad in bestAds %}
								<tr>
									<td>{{ad.title}}</td>
									<td>
										<img src="{{ad.picture}}" alt="{{ad.firstName}}" class="_avatar _avatarMini ">
										{{ad.firstName}}{{ad.lastName}}
									</td>
									<td>
										<span class="badge badge-dark">{{ad.note | number_format(1,","," ") }}</span>
									</td>

								</tr>

							{% endfor %}
						</tbody>
					</table>

				</div>


			</div>
			<div class="col">
				<div class="card bg-danger text-white mb-3 p-3">
					<h2 class="alert-heading my-3">
						<i class="fa fa-arrow-down" aria-hidden="true"></i>


						Les pires annonces</h2>
					<table class="table-hover">
						<thead>
							<tr>
								<th>Annonce</th>
								<th>Propriétaire</th>
								<th>Moyenne</th>
							</tr>
						</thead>
						<tbody>
							{% for ad in worsAds %}
								<tr>
									<td>{{ad.title}}</td>
									<td>
										<img src="{{ad.picture}}" alt="{{ad.firstName}}" class="_avatar _avatarMini ">
										{{ad.firstName}}{{ad.lastName}}
									</td>
									<td>
										<span class="badge badge-dark">{{ad.note | number_format(1,","," ") }}</span>
									</td>

								</tr>

							{% endfor %}
						</tbody>
					</table>

				</div>


			</div>

		</div>
	</div>
</div>{% endblock %}
